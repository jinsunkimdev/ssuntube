extends base
block content 
	p #{errorMessage} 	
	img(width=350, height=300, src="/" + loggedInUser.avatarUrl)
	form(method="POST", enctype="multipart/form-data")
		input(type="file", name="profileImg", id="profileImg", accept="image/*")
		input(type="text", name="username", id="username", value=loggedInUser.userName, min=3, max=20, required)
		input(type="text", name="userid", id="userid", value=loggedInUser.userId, min=8, max=20, required)
		input(type="submit", value="CONFIRM")
	a(href="/users/editPassword") Change Password?